<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".views.fragments.ReportAdminFragment">


    <TextView
            android:text="@string/n_a_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/colorPrimaryDark"/>

    <TextView
            android:id="@+id/nameOfPerson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/n_a_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            />

    <TextView
            android:id="@+id/genderOfPerson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/n_a_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameOfPerson"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            />

    <TextView
            android:id="@+id/description_report_viewer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/n_a_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genderOfPerson"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            />

    <TextView
            android:id="@+id/placeAttention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/n_a_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_report_viewer"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            />

    <TextView
            android:id="@+id/ambulance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/n_a_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placeAttention"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorPrimaryDark"
            />


    <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/date"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ambulance"
            android:textColor="@color/colorPrimaryDark"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_state"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date"
            android:text="@string/actual_state"
            android:textColor="@color/colorPrimaryDark"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_actual_state"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/n_a_value"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toEndOf="@+id/tv_state"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner_state"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ambulance"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/map_btn"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_new_state"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:text="@string/new_state"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toTopOf="@+id/btn_update_state"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_state"
            app:layout_constraintVertical_bias="0.555"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_state"
            android:layout_marginLeft="28dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_state"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toEndOf="@+id/tv_new_state"
            android:layout_marginStart="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.008"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/ambulance"/>

    <Button
            android:id="@+id/btn_update_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            app:layout_constraintTop_toBottomOf="@+id/tv_state"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rv_report_photos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.631"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/map_btn"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.125"
            android:background="@drawable/button_map"
            android:textStyle="bold"/>


    <com.synnapps.carouselview.CarouselViewPager
            android:id="@+id/rv_report_photos"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_state"
            app:items_visible="five"
            android:background="#DDD"/>

    <Button
            android:text="@string/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/spinner_state"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.63"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ambulance"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rv_report_photos"
            android:background="@drawable/button_map" app:layout_constraintVertical_bias="0.131"/>


</androidx.constraintlayout.widget.ConstraintLayout>