<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/list_report">

        <Button
                android:id="@+id/tv_title_filter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/title"
                android:gravity="center"
                android:drawableRight="@drawable/ic_arrow_down_24dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down_24dp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/date"
                android:gravity="center"
                android:id="@+id/tv_date_filter"
                android:drawableRight="@drawable/ic_arrow_down_24dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down_24dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_list_issues"/>

</LinearLayout>